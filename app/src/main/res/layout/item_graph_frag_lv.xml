<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/item_graphFrag_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@mipmap/expense_travel_selected"/>

    <TextView
        android:id="@+id/item_graphFrag_typeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_toRightOf="@id/item_graphFrag_iv"
        android:text="Travel"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/item_graphFrag_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22%"
        android:textSize="16sp"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/item_graphFrag_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$123.3"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:textSize="16sp"/>






</RelativeLayout>