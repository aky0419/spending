<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/dialog_set_budget_tv"
        android:text="@string/set_budget"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/dialog_add_budget_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_clear_black_24dp"
        android:layout_alignParentRight="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_set_budget_tv"
        android:id="@+id/dialog_set_budget_tv2"
        android:text="$"
        android:textSize="20sp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/dialog_set_budget_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf ="@id/dialog_set_budget_tv2"
        android:layout_alignBaseline="@id/dialog_set_budget_tv2"
        android:background="@color/white">
        <requestFocus/>
    </EditText>

    <Button
        android:id="@+id/dialog_set_budget_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_set_budget_tv2"
        android:text="@string/addNote"
        android:textStyle="bold"
        android:textSize="18sp"
        android:background="@drawable/main_recordbtn_bg"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"/>


</RelativeLayout>